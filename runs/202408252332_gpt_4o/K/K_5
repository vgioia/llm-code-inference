```python
MOD = 998244353

def mod_exp(x, y, p):
    res = 1
    x = x % p
    while y > 0:
        if y & 1:
            res = (res * x) % p
        y = y >> 1
        x = (x * x) % p
    return res

def add_polynomials(A, B, N, K, mod):
    transformed_A = [0] * (N + 1)
    transformed_B = [0] * (N + 1)
    
    for i in range(N + 1):
        for j in range(i + 1):
            sign = 1 if (i - j) % 2 == 0 else -1
            coef = mod_exp(j, K, mod) * sign
            transformed_A[j] = (transformed_A[j] + coef * A[i]) % mod
    
    for i in range(N + 1):
        for j in range(N - i + 1):
            transformed_B[j + i] = (transformed_B[j + i] + mod_exp(K, i, mod) * B[i]) % mod
    
    result = [(transformed_A[i] + transformed_B[i]) % mod for i in range(N + 1)]
    return result

import sys
input = sys.stdin.read
data = input().split()
N = int(data[0])
K = int(data[1])
A = [int(data[i + 2]) for i in range(N + 1)]
B = [int(data[i + N + 3]) for i in range(N + 1)]

result = add_polynomials(A, B, N, K, MOD)
print(" ".join(map(str, result)))
```