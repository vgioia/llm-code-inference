```python
import sys
import heapq

n, s = map(int, sys.stdin.readline().split())
trabalhos = []
for _ in range(n):
    trabalho = list(map(int, sys.stdin.readline().split()))
    trabalhos.append(trabalho)

trabalhos.sort(key=lambda x: x[0])
fim_max = trabalhos[-1][1]
heap = []
lucro_max = 0

for dia in range(1, fim_max + 1):
    while trabalhos and trabalhos[0][0] == dia:
        inicio, fim, custo = trabalhos.pop(0)
        heapq.heappush(heap, (fim, custo))

    if heap:
        _, custo = heap[0]
        lucro = s * (fim_max - dia + 1) - custo
        lucro_max = max(lucro_max, lucro)

        maior_fim, _ = heapq.heappop(heap)
        for trabalho in [trabalhos[0]] if trabalhos else []:
            if trabalho[0] <= maior_fim + 1:
                work_inicio, work_fim, work_custo = trabalho
                heapq.heappush(heap, (work_fim, work_custo))

print(lucro_max)
```